<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header.ejs') %> 

<body>
  <div class="container">
    <h1>History</h1>
    <table>
      <tr>
        <th>Type</th>
        <th>Bank Code</th>
        <th>Amount</th>
        <th>Date</th>
      </tr>
      <% for( let i = 0; i < history.length; i++ ) { %>
        <tr>
          <td><%= history[i].type %></td>
          <td><%= history[i].code %></td>
          <td><%= history[i].amount %></td>
          <td><%= history[i].date.toLocaleString("en-US", {timeZone: "Asia/Dhaka"}) %></td>
        </tr>
      <% } %>
    </table>


    <a href="/dashboard">Back to dasboard</a>
  </div>
</body>
</html>